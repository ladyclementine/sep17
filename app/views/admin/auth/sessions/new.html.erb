<h4 class="text-uppercase text-center font-bold m-b-0">Entrar</h4>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal m-t-20'}) do |f| %>
<div class="form-group ">
  <div class="col-xs-12">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email ou Log in' %>
  </div>
</div>
<div class="form-group ">
  <div class="col-xs-12">
    <%= f.password_field :password, autocomplete: "off", class: "form-control",placeholder: 'Senha' %>
  </div>
</div>
<% if devise_mapping.rememberable? -%>
<div class="form-group ">
  <div class="col-xs-12">
    <div class="checkbox checkbox-custom">
      <%= f.check_box :remember_me %>
      <label for="checkbox-signup">
        Lembre-me
      </label>
    </div>
  </div>
</div>
<% end -%>
<div class="form-group text-center m-t-30">
  <div class="col-xs-12">
    <%= button_tag "Entrar", class:  "btn btn-custom btn-bordred btn-block waves-effect waves-light", type:"submit"  %>
  </div>
</div>
<% end %>
<div class="form-group m-t-30 m-b-0">
  <div class="col-sm-12">
    <%= link_to "Esqueceu a senha?", {controller: "passwords", action: "new"}, class: "text-muted" %><i class="fa fa-lock m-r-5"></i>
  </div>
</div>