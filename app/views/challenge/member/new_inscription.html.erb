<h4 class="text-uppercase text-center font-bold m-b-0"><%= "Equipe #{@challenge_team.name}" %></h4>
<%= form_tag challenge_members_inscription_path, class: 'form-inline m-t-10' do %>
  <% if !@errors.empty? %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <%= @errors.first.full_messages.first %>
    </div>
  <% end %>
  <% @challenge_team.limit.times do |index| %> 
    <%= fields_for "members[#{index}]", @members[index] do |m| %>
        <div class="row">
          <div class="form-group m-b-10">
            <div class="col-sm-6">
              <%= m.text_field :name, class: "form-control", placeholder: "Nome do membro #{index}", required: "true" %>
            </div>
            <div class="col-sm-6">
              <%= m.email_field :email, class: "form-control", placeholder: 'Email', required: "true" %>
            </div>
          </div>
        </div>
    <% end %>
  <% end %>

  <%= button_tag "Salvar membros", class:  "btn btn-custom btn-bordred btn-block waves-effect waves-light" %>
<% end %>